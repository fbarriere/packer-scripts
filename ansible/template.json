{
  "variables": {
    "base_path": ".",
    "buildversion": "test",
    "changes_list": "No change",
    "cloud_token": "notoken",
    "release_base_url": "."
  },
 "builders": [
    {
      "type": "virtualbox-iso",
      "name": "default",
      "guest_os_type": "RedHat_64",
      "headless": false,
      "iso_url": "http://mirrors.standaloneinstaller.com/centos/7.9.2009/isos/x86_64/CentOS-7-x86_64-NetInstall-2009.iso",
      "iso_checksum": "md5:0ce8e06655e9fd2bbf9f4793f940925f",
      "disk_size": 80000,
      "http_directory": ".",
      "boot_command": "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ansible/install.ks<enter>",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_timeout": "14400s",
      "shutdown_command": "echo {{ user `buildversion` }} > ~/.buildversion ; echo '/sbin/halt -h -p' > /tmp/shutdown.sh; echo 'vagrant'|sudo -S sh '/tmp/shutdown.sh'",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "virtualbox_version_file": ".vbox_version",
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--memory", "1024" ],
        [ "modifyvm", "{{.Name}}", "--cpus", "2" ]
      ]
    },
    {
      "type": "virtualbox-iso",
      "boot_command": "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ansible/install.ks<enter>",
      "disk_size": 80000,
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "guest_os_type": "RedHat_64",
      "headless": true,
      "http_directory": ".",
      "iso_checksum": "md5:0ce8e06655e9fd2bbf9f4793f940925f",
      "iso_url": "http://mirrors.standaloneinstaller.com/centos/7.9.2009/isos/x86_64/CentOS-7-x86_64-NetInstall-2009.iso",
      "name": "atlas",
      "shutdown_command": "echo {{ user `buildversion` }} > ~/.buildversion ; echo '/sbin/halt -h -p' > /tmp/shutdown.sh; echo 'vagrant'|sudo -S sh '/tmp/shutdown.sh'",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_timeout": "14400s",
      "ssh_username": "vagrant",
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--memory", "1024" ],
        [ "modifyvm", "{{.Name}}", "--cpus", "2" ]
      ],
      "virtualbox_version_file": ".vbox_version"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo 'vagrant'|sudo -S sh '{{.Path}}'",
      "override": {
        "atlas": {
          "scripts": [
            "scripts/virtualbox.sh",
            "scripts/ansible.sh",
            "scripts/cleanup.sh"
          ]
        },
        "default": {
          "scripts": [
            "scripts/virtualbox.sh",
            "scripts/ansible.sh",
            "scripts/cleanup.sh"
          ]
        }
      }
    }
  ],
  "post-processors": [
    [
      {
        "type": "vagrant",
        "output": "{{ user `base_path` }}/ansible-centos7_{{ user `buildversion` }}.box"
      },
      {
        "type": "vagrant-cloud",
        "only": [ "atlas" ],
        "box_tag": "fbarriere/ansible-centos7",
        "access_token": "{{user `cloud_token`}}",
        "version": "{{user `buildversion`}}",
        "version_description": "{{ user `changes_list` }}",
        "box_download_url": "{{ user `release_base_url` }}/ansible-centos7_{{ user `buildversion` }}.box"
      }
    ]
  ]
}

