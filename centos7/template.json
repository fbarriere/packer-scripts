{
  "variables": {
    "base_path": ".",
    "buildversion": "test",
    "changes_list": "No change",
    "cloud_token": "notoken",
    "release_base_url": "."
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "name": "default",
      "guest_os_type": "RedHat_64",
      "headless": true,
      "iso_url": "http://mirrors.standaloneinstaller.com/centos/7.9.2009/isos/x86_64/CentOS-7-x86_64-NetInstall-2009.iso",
      "iso_checksum": "md5:0ce8e06655e9fd2bbf9f4793f940925f",
      "disk_size": 80000,
      "http_directory": ".",
      "boot_command": "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos7/install.ks<enter>",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_timeout": "14400s",
      "shutdown_command": "echo {{ user `buildversion` }} > ~/.buildversion ; echo '/sbin/halt -h -p' > /tmp/shutdown.sh; echo 'vagrant'|sudo -S sh '/tmp/shutdown.sh'",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "virtualbox_version_file": ".vbox_version",
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--memory", "1024" ],
        [ "modifyvm", "{{.Name}}", "--cpus", "2" ],
        [ "storagectl", "{{.Name}}", "--add", "sata", "--name", "SATA Controller" ]
      ]
    },
    {
      "type": "virtualbox-iso",
      "name": "atlas",
      "guest_os_type": "RedHat_64",
      "headless": true,
      "iso_url": "http://mirrors.standaloneinstaller.com/centos/7.9.2009/isos/x86_64/CentOS-7-x86_64-NetInstall-2009.iso",
      "iso_checksum": "md5:0ce8e06655e9fd2bbf9f4793f940925f",
      "disk_size": 80000,
       "http_directory": ".",
      "boot_command": "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos7/install.ks<enter>",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "14400s",
      "shutdown_command": "echo {{ user `buildversion` }} > ~/.buildversion ; echo '/sbin/halt -h -p' > /tmp/shutdown.sh; echo 'vagrant'|sudo -S sh '/tmp/shutdown.sh'",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "virtualbox_version_file": ".vbox_version",
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--memory", "1024" ],
        [ "modifyvm", "{{.Name}}", "--cpus", "2" ]
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo 'vagrant'|sudo -S sh '{{.Path}}'",
      "override": {
        "default": {
          "scripts": [
            "scripts/compilation_packages.sh",
            "scripts/python3.sh",
            "scripts/virtualbox.sh",
            "scripts/cleanup.sh"
          ]
        },
        "atlas": {
          "scripts": [
            "scripts/compilation_packages.sh",
            "scripts/python3.sh",
            "scripts/virtualbox.sh",
            "scripts/cleanup.sh"
          ]
        }        
      }
    }
  ],
  "post-processors": [
  [
    {
      "type": "vagrant",
      "output": "{{ user `base_path` }}/centos7_{{ user `buildversion` }}.box"
    },
    {
      "type": "vagrant-cloud",
      "only": ["atlas"],
      "box_tag": "fbarriere/centos-7",
      "access_token": "{{user `cloud_token`}}",
      "version": "{{user `buildversion`}}",
      "version_description": "{{ user `changes_list` }}",
      "box_download_url": "{{ user `release_base_url` }}/compile-centos7_{{ user `buildversion` }}.box"
    }
  ]
  ]
}

